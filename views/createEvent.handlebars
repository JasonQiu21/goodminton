<section>
    <form action="/api/events" method="POST" id="create-event-form" class = "createEventForm">
    <h3>Create an Event</h3>
    <label for="eventNameInput">Event Name</label>
    <input name="eventNameInput" id="eventNameInput" type="text">
    <br>
    <label for="eventDateInput">Event Date</label>
    <input name="eventDateInput" id="eventDateInput" type="date">
    <br>
    <label for="eventTypeInput">Event Type</label>
    <select name="eventTypeInput" id="eventTypeInput">
        <option value="doublesTournament">Doubles Tournament</option>
        <option value="singlesTournament">Singles Tournament</option>
        <option value="practice">Practice</option>
    </select>
    <br>
    <label for="tournamentType">Tournament Type</label>
    <select name = "tournamentTypeInput" id = "tournamentTypeInput">
        <option value ="none"></option>
        <option value="single elim">Single Elimination</option>
        <option value="double elim">Double Elimination</option>
        <option value = "round robin">Round Robin</option>
        <option value = "swiss">Swiss Bracket</option>
    </select>
    <br>
    <button type="submit">Submit</button>
    <div id="output-error"></div>
    <script src="https://code.jquery.com/jquery-2.2.4.min.js"
    integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
    <script src="../public/js/createEvent.js"></script>
</section>
