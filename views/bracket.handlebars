<h1>Epic Bracket</h1>
<main id="tournament">
    {{#each bracket}}
        <ul class="round round-{{@index}}">
        <li class="spacer">&nbsp;</li>
        {{#each this}}
            <li class="game game-top {{#if winner}}winner{{/if}}">{{name}} <span>{{score}}</span></li>
            <li class="game game-spacer">&nbsp;</li>
            <li class="game game-bottom {{#if winner}}winner{{/if}}">{{name}} <span>{{score}}</span></li>
        {{/each}}
        <li class="spacer">&nbsp;</li>
    {{/each}}
</main>